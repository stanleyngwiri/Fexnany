<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ui.Splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sdsmdg.harjot.longshadows.LongShadowsWrapper
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@null">

            <com.sdsmdg.harjot.longshadows.LongShadowsImageView
                android:id="@+id/splashImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:shadow_angle="45"
                app:shadow_length="350"
                app:shadow_endColor="#00000000"
                app:shadow_startColor="#44000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:src="@drawable/stroller" />

        </com.sdsmdg.harjot.longshadows.LongShadowsWrapper>


        <TextView
            android:id="@+id/AppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="40sp" />

    </LinearLayout>
</RelativeLayout>